  "version": "1.0.0",
  "scripts": {
    "start": "gulp start",
    "build": "gulp build",
    "test": "npm run editorconfig && npm run stylelint",
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss"
  },
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "2.0.5",
    "autoprefixer": "10.4.16",
    "browser-sync": "2.29.3",
    "del": "7.1.0",
    "gulp": "^3.9.1",
    "gulp-csso": "4.0.1",
    "gulp-htmlmin": "5.0.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-posthtml": "3.0.5",
    "gulp-rename": "2.0.0",
    "gulp-sass": "5.1.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-svgstore": "9.0.0",
    "gulp-uglify": "3.0.2",
    "gulp-webp": "^4.0.0",
    "posthtml-include": "1.7.4",
    "stylelint": "15.10.3",
    "stylelint-config-htmlacademy": "2.0.4"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
